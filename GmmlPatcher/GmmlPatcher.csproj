<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Semver" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\UndertaleModTool\UndertaleModLib\UndertaleModLib.csproj" />
  </ItemGroup>

  <Target Name="BuildNativeProjectWindows" AfterTargets="Publish">
    <PropertyGroup>
      <NetHostDir>$(NetCoreTargetingPackRoot)\Microsoft.NETCore.App.Host.$(NETCoreSdkRuntimeIdentifier)\$(BundledNETCoreAppPackageVersion)\runtimes\$(NETCoreSdkRuntimeIdentifier)\native</NetHostDir>
      <FinalOutputPath>$(PublishDir)\gmml-final</FinalOutputPath>
    </PropertyGroup>

    <MSBuild Projects="..\gmml\gmml.vcxproj" Targets="Build"
             Properties="FinalOutputPath=$(FinalOutputPath)\;NetHostDir=$(NetHostDir)\" />

    <ItemGroup>
      <PatcherOutput Include="$(PublishDir)\*" />
    </ItemGroup>
    <Copy SourceFiles="@(PatcherOutput)" DestinationFolder="$(FinalOutputPath)\gmml\patcher" SkipUnchangedFiles="true" />
    <MakeDir Directories="$(FinalOutputPath)\gmml\mods" />
  </Target>

</Project>
